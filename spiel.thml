<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Spiel • Pegelspirale</title>
  </head>
  <body>
    <main class="shell">
      <h2>Spiel</h2>

      <div class="controls">
        <fieldset>
          <legend>Tipp</legend>
        <label><input type="radio" name="guess" value="over" checked /> Drüber (≥51)</label>
        <label><input type="radio" name="guess" value="under" /> Drunter (≤50)</label>
        </fieldset>

        <label>Superzahl (0–101)
          <input id="super" type="number" min="0" max="101" value="50" />
        </label>
      </div>

      <button id="draw" class="btn primary big">Zahl ziehen</button>
      <div id="result" class="result" aria-live="polite"></div>

      <div class="btn-row" style="margin-top:12px">
        <a class="btn" href="./index.html">Zurück</a>
      </div>
    </main>

    <script type="module" src="/src/game.ts"></script>
  </body>
</html>
